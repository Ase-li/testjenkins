<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginEnd="2dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:id="@+id/rl_my_coupon"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:background="@mipmap/img_xjhb_bj">

        <ImageView
            android:id="@+id/iv_coupon_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="35dp"
            android:src="@mipmap/icon_yhq_tx"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_coupon_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="24dp"
            android:text=""
            android:textColor="@color/color_ff1f1f"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_coupon_amount"
            android:layout_toEndOf="@+id/tv_coupon_amount"
            android:text="å…ƒ"
            android:textColor="@color/color_ff1f1f"
            android:textSize="@dimen/txt_18sp" />

        <TextView
            android:id="@+id/tv_coupon_type"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/bg_coupon_type_cash"
            android:gravity="center"
            android:text=""
            android:textColor="@color/color_ff1f1f"
            android:textSize="@dimen/txt_11sp" />

        <TextView
            android:id="@+id/tv_coupon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="115dp"
            android:layout_marginTop="15dp"
            android:text=""
            android:textColor="@color/color_333333"
            android:textSize="@dimen/txt_14sp" />

        <LinearLayout
            android:id="@+id/ll_remark1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_coupon_name"
            android:layout_below="@+id/tv_coupon_name"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <View
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/background_gray_circle" />

            <TextView
                android:id="@+id/tv_remark1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text=""
                android:textColor="@color/color_666666"
                android:textSize="@dimen/txt_11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_remark2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_coupon_name"
            android:layout_below="@+id/ll_remark1"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <View
                android:layout_width="3dp"
                android:layout_height="3dp"

                android:layout_marginTop="6dp"
                android:background="@drawable/background_gray_circle" />

            <TextView
                android:id="@+id/tv_remark2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:maxWidth="130dp"
                android:text=""
                android:textColor="@color/color_666666"
                android:textSize="@dimen/txt_11sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_coupon_validity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/tv_coupon_name"
            android:layout_marginBottom="12dp"
            android:text=""
            android:textColor="@color/color_999999"
            android:textSize="@dimen/txt_11sp" />

        <TextView
            android:id="@+id/tv_coupon_status"
            android:layout_width="65dp"
            android:layout_height="120dp"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="2.5dp"
            android:layout_marginTop="1dp"
            android:background="@mipmap/btn_xjhb_sy"
            android:ems="1"
            android:gravity="center"
            android:paddingEnd="15dp"
            android:paddingStart="24dp"
            android:text=""
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/txt_24sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:background="@mipmap/img_yhq_xz"
        android:visibility="gone" />
</FrameLayout>