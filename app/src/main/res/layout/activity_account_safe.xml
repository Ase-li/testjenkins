<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/base_view"
    tools:context=".ui.activity.personCenter.AccountSafeActivity">

    <include layout="@layout/include_title_bar" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/tv_jump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳过"
            android:textColor="@color/color_ff4e03"
            android:textSize="@dimen/txt_14sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignEnd="@id/tv_jump"
            android:layout_alignLeft="@+id/tv_jump"
            android:layout_below="@+id/tv_jump"
            android:layout_marginTop="1dp"
            android:background="@color/color_ff4e03" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:text="为保障账户安全"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/txt_14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="请按您的习惯设置解锁方式"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/txt_14sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_gesture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/icon_zhaqbh_ssjs" />

        <ImageView
            android:id="@+id/tv_fingerprint"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="55dp"
            android:src="@mipmap/icon_zhaqbh_zwjs" />

    </LinearLayout>
</LinearLayout>