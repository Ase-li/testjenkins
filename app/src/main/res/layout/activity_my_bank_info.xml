<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_74777a"
        android:orientation="vertical"
        tools:context=".ui.activity.personCenter.MyBankInfoActivity">

        <include layout="@layout/include_title_bar" />

        <include layout="@layout/include_bank_info"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/ll_unbind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/tv_add_bank"
                android:layout_width="330dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:clickable="false"
                android:src="@mipmap/img_wdyhk_mr" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="31.5dp"
                android:layout_marginStart="31.5dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/asset_warm_prompt"
                android:textColor="#FF71B8FF"
                android:textSize="@dimen/txt_12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_unbind_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/bg_unbind_bank"
            android:clickable="false"
            android:paddingBottom="10dp"
            android:paddingEnd="65dp"
            android:paddingStart="65dp"
            android:paddingTop="10dp"
            android:text="@string/asset_check_limit"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/txt_14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_contact_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:text="如遇问题请联系客服"
        android:textColor="#FFFFFFFF"
        android:textSize="12sp" />
</RelativeLayout>