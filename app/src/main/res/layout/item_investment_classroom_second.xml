<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff">

    <ImageView
        android:id="@+id/iv_classroom_pic"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/img_sy_banner" />

    <TextView
        android:id="@+id/tv_classroom_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_alignTop="@+id/iv_classroom_pic"
        android:maxLines="2"
        android:text="如何守护自己的财富？如何守护自己的 财富？"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/txt_12sp" />

    <TextView
        android:id="@+id/tv_classroom_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_classroom_pic"
        android:layout_marginStart="20dp"
        android:maxLines="1"
        android:text="2018.07.24"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/txt_11sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_fafafa" />
</RelativeLayout>