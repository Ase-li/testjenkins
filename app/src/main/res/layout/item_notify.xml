<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/bg_white"
        app:cardCornerRadius="6dp"
        app:cardElevation="4dp"
        app:contentPadding="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/vw1"
                android:layout_width="2dp"
                android:layout_height="15dp"
                android:background="@color/color_6861ff" />

            <TextView
                android:id="@+id/tv_notify_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@+id/vw1"
                android:text="年无忧DBD-111234起息通知"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/txt_14sp" />

            <TextView
                android:id="@+id/tv_notify_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_notify_title"
                android:layout_marginTop="15dp"
                android:text="尊敬的56金服投资人，您购买的年无忧项目DBD-111234已满标放款，即日起开始计息，标的到期日为2019.2.18，敬请悉知！"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/txt_12sp" />

            <TextView
                android:id="@+id/tv_notify_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/tv_notify_content"
                android:layout_marginTop="15dp"
                android:text="2018.03.23"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/txt_11sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>