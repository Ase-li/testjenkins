<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.activity.personCenter.PersonSetActivity">

    <include layout="@layout/include_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:text="@string/person_info"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/txt_12sp" />

            <com.chd.chd56lc.widget.NewTwoSideTextView
                android:id="@+id/ntv_tel_number"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                app:backgroundDrawable1="@color/color_ffffff"
                app:contentGravity="center_vertical"
                app:descText1="@string/person_tel_number"
                app:rightIcon="@mipmap/btn_grzx_rightarrow"
                app:setDescTextColor1="@color/color_333333"
                app:setDescTextSize1="@dimen/txt_14sp"
                app:setValueTextColor1="@color/color_999999"
                app:setValueTextSize1="@dimen/txt_14sp" />

            <com.chd.chd56lc.widget.NewTwoSideTextView
                android:id="@+id/ntv_user_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                app:backgroundDrawable1="@color/color_ffffff"
                app:contentGravity="center_vertical"
                app:descText1="@string/person_info_name1"
                app:setDescTextColor1="@color/color_333333"
                app:setDescTextSize1="@dimen/txt_14sp"
                app:setValueTextColor1="@color/color_999999"
                app:setValueTextSize1="@dimen/txt_14sp" />

            <com.chd.chd56lc.widget.NewTwoSideTextView
                android:id="@+id/ntv_user_id"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                app:backgroundDrawable1="@color/color_ffffff"
                app:contentGravity="center_vertical"
                app:descText1="@string/person_info_id1"
                app:setDescTextColor1="@color/color_333333"
                app:setDescTextSize1="@dimen/txt_14sp"
                app:setValueTextColor1="@color/color_999999"
                app:setValueTextSize1="@dimen/txt_14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:text="@string/person__security_settings"
                android:textColor="#FF999999"
                android:textSize="12sp" />

            <com.chd.chd56lc.widget.NewTwoSideTextView
                android:id="@+id/ntv_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                app:backgroundDrawable1="@color/color_ffffff"
                app:contentGravity="center_vertical"
                app:descText1="@string/person_login_password"
                app:rightIcon="@mipmap/btn_grzx_rightarrow"
                app:setDescTextColor1="@color/color_333333"
                app:setDescTextSize1="@dimen/txt_14sp"
                app:setValueTextColor1="@color/color_999999"
                app:setValueTextSize1="@dimen/txt_14sp"
                app:valueText1="@string/accout_modify_password" />

            <com.chd.chd56lc.widget.NewTwoSideTextView
                android:id="@+id/ntv_trans_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                app:backgroundDrawable1="@color/color_ffffff"
                app:contentGravity="center_vertical"
                app:descText1="@string/person_pay_password"
                app:rightIcon="@mipmap/btn_grzx_rightarrow"
                app:setDescTextColor1="@color/color_333333"
                app:setDescTextSize1="@dimen/txt_14sp"
                app:setValueTextColor1="@color/color_999999"
                app:setValueTextSize1="@dimen/txt_14sp"
                app:valueText1="@string/person_set_pay_password" />

            <RelativeLayout
                android:id="@+id/rl_touch_id"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/color_ffffff"
                android:paddingEnd="15dp"
                android:paddingStart="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/person_touch_id"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/txt_14sp" />

                <CheckBox
                    android:id="@+id/cb_touch_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/selector_off_on"
                    android:button="@null" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/color_ffffff"
                android:paddingEnd="15dp"
                android:paddingStart="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/person_gesture_password"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/txt_14sp" />

                <CheckBox
                    android:id="@+id/cb_gesture_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/selector_off_on"
                    android:button="@null"
                    android:checked="false" />
            </RelativeLayout>

            <com.chd.chd56lc.widget.NewTwoSideTextView
                android:id="@+id/ntv_trans_set"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                app:backgroundDrawable1="@color/color_ffffff"
                app:contentGravity="center_vertical"
                app:descText1="@string/person_push_settings"
                app:rightIcon="@mipmap/btn_grzx_rightarrow"
                app:setDescTextColor1="@color/color_333333"
                app:setDescTextSize1="@dimen/txt_14sp"
                app:setValueTextColor1="@color/color_999999"
                app:setValueTextSize1="@dimen/txt_14sp"
                app:valueText1="" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:text="@string/person_other_info"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/txt_12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/color_ffffff"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/person_version_info"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/txt_14sp" />

                <TextView
                    android:id="@+id/ntv_version_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/txt_14sp" />
            </RelativeLayout>

            <com.chd.chd56lc.widget.NewTwoSideTextView
                android:id="@+id/ntv_about_we"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                app:backgroundDrawable1="@color/color_ffffff"
                app:contentGravity="center_vertical"
                app:descText1="@string/person_about_us"
                android:visibility="gone"
                app:rightIcon="@mipmap/btn_grzx_rightarrow"
                app:setDescTextColor1="@color/color_333333"
                app:setDescTextSize1="@dimen/txt_14sp"
                app:setValueTextColor1="@color/color_999999"
                app:setValueTextSize1="@dimen/txt_14sp"
                app:valueText1="" />

            <com.chd.chd56lc.widget.NewTwoSideTextView
                android:id="@+id/ntv_contact_us"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                app:backgroundDrawable1="@color/color_ffffff"
                app:contentGravity="center_vertical"
                app:descText1="@string/person_contact_us"
                app:rightIcon="@mipmap/btn_grzx_rightarrow"
                app:setDescTextColor1="@color/color_333333"
                app:setDescTextSize1="@dimen/txt_14sp"
                app:setValueTextColor1="@color/color_999999"
                app:setValueTextSize1="@dimen/txt_14sp"
                app:valueText1="" />

            <com.chd.chd56lc.widget.NewTwoSideTextView
                android:id="@+id/ntv_out_login"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="1dp"
                app:backgroundDrawable1="@color/color_ffffff"
                app:contentGravity="center_vertical"
                app:descText1="@string/person_login_out"
                app:rightIcon="@mipmap/btn_grzx_rightarrow"
                app:setDescTextColor1="@color/color_333333"
                app:setDescTextSize1="@dimen/txt_14sp"
                app:setValueTextColor1="@color/color_999999"
                app:setValueTextSize1="@dimen/txt_14sp"
                app:valueText1="" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>