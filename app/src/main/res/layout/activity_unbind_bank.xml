<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.presenter.UnbindBankActivity">

    <include layout="@layout/include_title_bar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="51dp"
        android:text="解绑银行卡"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/txt_24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="请输入短信验证码，以验证身份"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/txt_12sp" />

    <include layout="@layout/layout_captcha" />

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginEnd="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_bg_lump_verify"
        android:gravity="center"
        android:text="@string/login_btn_ok"
        android:textColor="@color/color_ffffff"
        android:textSize="14sp" />
</LinearLayout>